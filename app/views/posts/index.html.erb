<div class="container">
  <div class="center-block">
    <h1>Help Out</h1>

  <table class="table table-condensed table-hover">
     <thead>
        <tr>
          <th>Location</th>
          <th>Opened</th>
        </tr>
      </thead>
    <tbody>
      <% @posts.each do |p| %>
        <tr>
        <td><a href="/posts/<%= p.id %>"><%= p.location %></a></td>
        <td><%= p.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
