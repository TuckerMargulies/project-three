* {
  margin: 0;
  border: 0;
  padding: 0;
  font: inherit;
  box-sizing: border-box;
}

html body {
  height: 100%;
  background: url('<%= asset_path("bahhhhhh.jpg") %>') no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  font-size: 12px;
  font-family: "Helvetica", sans-serif;
}

body {
  overflow-x: hidden !important;
}

#page-wrap {
  width: 500px;
  margin: 5em auto;
  padding: 5em;
  text-align:center;
}

.center-block {
  width: 100%;
  margin: 0 auto;
  text-align: center;
}

form {
  width: 80%;
  margin: 2em auto;
}

.form-control {
  border: 1px solid #eeeeee;
  border-radius: 0;
}

.well {
    background-color: transparent;
    border: 0;
    border-radius: 0;
    -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
    box-shadow: inset 0 1px 1px rgba(0,0,0,.05);
}

hr.fade {
    border: 0;
    height: 1px;
    background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
}

a {
  color: orange;
  opacity: .8;
  text-decoration: none;
}

a:hover, a:visited, a:active{
  color: #fbfbfb !important;
  opacity: .5 !important;
}

h2 small {
  color: orange;
}

a, a:hover, a:visited, a:active {
  color: orange;
  text-decoration: none;
}

h3 {
  margin-bottom: 20px !important;
  text-align: center !important;
}

.btn {
    padding: 10px 20px;
    font-weight: 100;
    text-transform: none;
    display: block;
    text-align: center;
    width: 100%;
    border-radius: 0;
    border: 1px solid #eeeeee;
}

.btn-primary {
    background-color: #fdfdfd;
    color: #999;
}

.btn-default {
  color: orange;
}

.btn-default:hover {
  color: orange;
  background-color: #fdfdfd;
  border-color: #eeeeee;
}
